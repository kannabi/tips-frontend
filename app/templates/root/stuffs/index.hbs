<div class="container mt-4">
  <div class="row">
    <div class="col-12 mb-2">
      <h4>Персонал {{#link-to "root.stuffs.new" class="btn btn-secondary btn-sm"}}Добавить{{/link-to}}</h4>
    </div>
    <div class="col-12">
      {{#if model.length}}
        <table class="table table-hover">
          <thead>
            <tr>
              <th>#</th>
              <th>Ф.И.О</th>
              <th>Email</th>
              <th>Код</th>
            </tr>
          </thead>
          <tbody>
            {{#each model.content as |stuff|}}
              <tr>
                <td>{{stuff.id}}</td>
                <td>{{stuff.second_name}} {{stuff.first_name}} {{stuff.third_name}}</td>
                <td>{{stuff.email}}</td>
                <td>{{stuff.code}}</td>
              </tr>
            {{/each}}
          </tbody>
        </table>
        <div class="col-12 mt-2">
          {{page-numbers content=model}}
        </div>
      {{else}}
        <p>Персонала нет</p>
      {{/if}}
    </div>
  </div>
</div>